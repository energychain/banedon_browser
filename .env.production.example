# Production Environment Configuration
# Copy this file to .env.production and modify as needed

# Server Configuration
PORT=3010
NODE_ENV=production

# Session Configuration
SESSION_TIMEOUT=1800000
SESSION_CLEANUP_INTERVAL=300000
MAX_SESSIONS=50

# Command Configuration
COMMAND_TIMEOUT=30000
MAX_COMMAND_QUEUE_SIZE=50

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=60000

# Security Configuration - IMPORTANT: Update for your server IP
ALLOWED_ORIGINS=http://10.0.0.2:3010,https://10.0.0.2:3010,chrome-extension://,moz-extension://
API_RATE_LIMIT=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs/app.log
